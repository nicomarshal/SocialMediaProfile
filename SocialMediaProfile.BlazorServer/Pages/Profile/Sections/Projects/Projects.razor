@inject IProjectWebService ProjectWebService;

<section id="proyectos" class="projects bg-projects ps-4 pe-4 pb-4" style="padding-top: 96px;">
    <article class="container">
        <div class="position-relative">
            <h2 class="mb-4 text-center text-sm-start">Proyectos</h2>
            <AuthorizeView Policy="AliasPolicy" Resource=@(Alias)>
                <Authorized>
                    <div class="position-absolute top-0 end-0">
                        <button class="add btn btn-primary rounded-circle p-2" style="background: #1B5DC2;" data-bs-toggle="modal" data-bs-target="#addProject">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-pencil" viewBox="0 0 16 16">
                                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                            </svg>
                        </button>
                    </div>
                </Authorized>
            </AuthorizeView>
        </div>
        <div class="row row-cols-3">
            @foreach (var proj in _projectsList)
            {
                <div class="col p-4">
                    <div class="card h-100 bg-dark text-white">
                        <div class="images position-relative">
                            <img src="@(proj.Images)" class="card-img-top object-fit-cover" style="height: 250px;" alt="Project">
                            <AuthorizeView Policy="AliasPolicy" Resource=@(Alias)>
                                <Authorized>
                                    <div class="position-absolute top-0 end-0" style="margin-top: 18px; margin-right: 18px;">
                                        <button class="edit btn btn-primary rounded-circle p-2" style="background: #1B5DC2;" data-bs-toggle="modal" data-bs-target="#editProject" @onclick="() => EditProjectSelected(proj)">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-pencil" viewBox="0 0 16 16">
                                                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                                            </svg>
                                        </button>
                                        <button class="delete btn btn-primary rounded-circle p-2" style="background: #1B5DC2;" data-bs-toggle="modal" data-bs-target="#removeProject" @onclick="() => RemoveProjectSelected(proj.Id)">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-x-lg" viewBox="0 0 16 16">
                                                <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z" />
                                            </svg>
                                        </button>
                                    </div>
                                </Authorized>
                            </AuthorizeView>
                        </div>
                        <div class="card-body text-center">
                            <h4 class="projectName card-title h-25">@(proj.Name)</h4>
                            <p class="description card-text h-50">@(proj.Description)</p>
                            <a href="@(proj.URL)" class="url card-link h-25">
                                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="white" class="bi bi-github" viewBox="0 0 16 16">
                                    <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z" />
                                </svg>
                            </a>
                        </div>
                        <div class="card-footer text-center text-white" style="background: #1B5DC2;">
                            <small class="period">@(proj.StartDate.Date)-@(proj.FinishDate.Date)</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </article>
</section>

<CreateProject Alias="@(Alias)" OnClick="UpdateProjectsList"></CreateProject>
<EditProject Alias="@(Alias)" OnClick="UpdateProjectsList" @ref="EditProjectRef"></EditProject>
<RemoveProject Alias="@(Alias)" OnClick="UpdateProjectsList" @ref="RemoveProjectRef"></RemoveProject>

@code {
    [Parameter]
    public string Alias { get; set; }

    public List<ProjectDTO> _projectsList = new List<ProjectDTO>();

    public EditProject EditProjectRef; //Es una referencia al componente EditProject
    public RemoveProject RemoveProjectRef; //Es una referencia al componente RemoveProject

    protected override async Task OnInitializedAsync()
    {
        _projectsList = await ProjectWebService.GetAllInDescOrderAsync(Alias);
    }

    private async Task UpdateProjectsList(List<ProjectDTO> projectsList)
    {
        _projectsList = projectsList;
        await Task.CompletedTask;
    }

    private async Task EditProjectSelected(ProjectDTO projectDTO)
    {
        await EditProjectRef.GetProjectSelected(projectDTO);
    }

    private async Task RemoveProjectSelected(int projectId)
    {
        await RemoveProjectRef.GetProjectSelected(projectId);
    }
}
