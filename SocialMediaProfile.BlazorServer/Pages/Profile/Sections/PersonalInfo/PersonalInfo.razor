<EditPersonInfo Alias="@(Alias)" OnClick="UpdatePersonInfo" @ref="EditPersonInfoRef"></EditPersonInfo>

@code {
    [Parameter]
    public string Alias { get; set; }

    public PersonDTO _personInfo = new PersonDTO();

    public EditPersonInfo EditPersonInfoRef; //Es una referencia al componente EditPersonInfo

    protected override async Task OnInitializedAsync()
    {
        _personInfo = await PersonWebService.GetByAliasAsync(Alias);
    }

    private async Task UpdatePersonInfo(PersonDTO personInfo)
    {
        _personInfo = personInfo;
        await Task.CompletedTask;
    }

    private async Task EditPersonInfoSelected(PersonDTO personInfo)
    {
        await EditPersonInfoRef.GetPersonInfoSelected(personInfo);
    }
}
