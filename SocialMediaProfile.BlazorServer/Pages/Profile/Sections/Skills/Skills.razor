<CreateSkill Alias="@(Alias)" OnClick="UpdateSkillsList"></CreateSkill>
<EditSkill Alias="@(Alias)" OnClick="UpdateSkillsList" @ref="EditSkillRef"></EditSkill>
<RemoveSkill Alias="@(Alias)" OnClick="UpdateSkillsList" @ref="RemoveSkillRef"></RemoveSkill>

@code {
    [Parameter]
    public string Alias { get; set; }

    private List<SkillDTO> _skillsList = new List<SkillDTO>();
    private Dictionary<int, List<SkillDTO>> _skillsDict = new Dictionary<int, List<SkillDTO>>();

    public EditSkill EditSkillRef; //Es una referencia al componente EditSkill
    public RemoveSkill RemoveSkillRef; //Es una referencia al componente RemoveSkill

    protected override async Task OnInitializedAsync()
    {
        _skillsList = await SkillWebService.GetAllByAliasAsync(Alias);

        // Iterar sobre la lista y guardar cada grupo de 3 elementos en el diccionario
        await SplitSkillsListIntoGroupsOfThree(_skillsList);
    }

    private async Task SplitSkillsListIntoGroupsOfThree(List<SkillDTO> skillsList)
    {
        _skillsDict.Clear();

        for (int i = 0; i < skillsList.Count; i += 3)
        {
            List<SkillDTO> subList = skillsList.Skip(i).Take(3).ToList();
            _skillsDict[i] = subList;
        }
        await Task.CompletedTask;
    }

    private async Task UpdateSkillsList(List<SkillDTO> skillsList)
    {
        await SplitSkillsListIntoGroupsOfThree(skillsList);
    }

    private async Task EditSkillSelected(SkillDTO skillDTO)
    {
        await EditSkillRef.GetSkillSelected(skillDTO);
    }

    private async Task RemoveSkillSelected(int skillId)
    {
        await RemoveSkillRef.GetSkillSelected(skillId);
    }
}
